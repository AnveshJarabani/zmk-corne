            display-name = "Quarantine";
            bindings = <
&to 0          &none   &none   &none   &none   &none                             &mmv MOVE_UP                     &none   &none   &none   &none   &none   &bt BT_CLR
&none          &none   &none   &none   &none   &none             &mmv MOVE_LEFT  &mkp LCLK       &mmv MOVE_RIGHT  &none   &none   &none   &none   &none   &to 0
&none          &none   &none   &none   &none   &none   &none                     &mmv MOVE_DOWN                   &none   &none   &none   &none   &none   &none
